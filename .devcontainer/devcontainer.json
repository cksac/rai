{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--device=nvidia.com/gpu=all",
        "--shm-size=2g"
    ],
    "mounts": [
        {
            "source": "devcontainer-cargo-cache-${devcontainerId}",
            "target": "/usr/local/cargo",
            "type": "volume"
        }
    ]
}